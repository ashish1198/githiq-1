#include<stdio.h>
int main()
{
    for(int i=0;i<=6;i++)
    {
	for(int j=6;j>=i;j--)
	{
	    printf("*");
	}
	for(int k=1;k<=(2*i)+1;k++)
	{
	    printf(" ");
	}
	for(int p=6;p>=i;p--)
	{
	    printf("*");
	}
	printf("\n");
    }
    for(int a=0;a<=6;a++)
    {
	for(int j=0;j<=a;j++)
	{
	    printf("*");
	}
	for(int k=13;k>=(2*a)+1;k--)
	{
	    printf(" ");
	}
	for(int p=0;p<=a;p++)
	{
	    printf("*");
	}
	printf("\n");
    }
}
